%h2 Products

%h3 New Product

=error_messages_for @product
  
%form{:method => "POST", :action => "/products"}
  %fieldset
    %legend New Project
    %ol
      %li 
        %label{:for => "product_name"} Name
        %input{:name=>"product[name]", :id=>"product_name", :value => @product.name}
      %li
        %label{:for=>"product_price"} Price
        %input{:id=>"product_price", :name=>"product[price]", :value => @product.price, :type=>"text"}

      %li
        %label{:for => "product_description"} Description
        %textarea{:id=>"product-description", :name=>"product[description]"}= @product.description

  %input{:type=>"submit", :value => "Add Product"}
%hr

%h3 Products list
%p 
  View as 
  %a{:href=> "/products.json"} JSON
  or
  %a{:href=> "/products.xml"} XML
  
%table
  -@products.each do |product|
    %tr
      %td=product.name
      %td 
        %a{:href=>"/products/#{product.id}"} Details
      %td
        %form{:method=>"POST", :action => "/products/#{product.id}"}
          %input{:type=>"hidden", :name=>"_method", :value=>"delete"}
          %input{:type=>"submit", :value=>"Delete"}
  
=pagination_links(@products_count, @per_page, "/products")
